
#define MY_MACRO(NAME, ...) \
        ZMK_MACRO(NAME, \
                wait-ms = <10>; \
                tap-ms = <10>; \
                bindings = __VA_ARGS__; \
        )

ZMK_MACRO(m_select_and_delete,
        wait-ms = <0>;
        tap-ms = <0>;
        bindings = <&macro_press &mo l_nav2 &kp LSHFT>
                , <&macro_pause_for_release>
                , <&macro_release &kp LSHFT &mo l_nav2>
                , <&macro_tap &kp BACKSPACE>;
)

