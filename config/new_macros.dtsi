
#define MY_MACRO(NAME, ...) \
        ZMK_MACRO(NAME, \
                wait-ms = <10>; \
                tap-ms = <10>; \
                bindings = __VA_ARGS__; \
        )

ZMK_MACRO(m_delete_word,
        wait-ms = <50>;
        tap-ms = <20>;
        bindings = <&macro_press &kp LSHFT>
                , <&macro_pause_for_release>
                , <&macro_release &kp LSHFT>
                , <&macro_tap &kp BACKSPACE>;
)


